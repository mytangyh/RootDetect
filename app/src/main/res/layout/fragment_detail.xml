        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Button2" />

        <Button
			android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
